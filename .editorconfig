root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_spaces = true
insert_final_newline = true

# for whatever reasons use only 2 spaces for JavaScript
[*.{js,jsx}]
indent_size = 2

# trailing spaces in markdown indicate word wrap
[*.md]
trim_trailing_spaces = false
max_line_length = 80
